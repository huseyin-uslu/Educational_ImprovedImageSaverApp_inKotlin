<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TheFragmentUploadingSelectedPictures">

    <EditText
        android:id="@+id/uploadingFragment_noteAboutPicture_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="note about the picture"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/uploadingFragment_picturesDate_editText"
        app:layout_constraintTop_toBottomOf="@+id/uploadingFragment_picturesDate_editText" />

    <EditText
        android:id="@+id/uploadingFragment_picturesDate_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="the picture's date"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/uploadingFragment_picturesName_editText"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/uploadingFragment_picturesName_editText"
        app:layout_constraintTop_toBottomOf="@+id/uploadingFragment_picturesName_editText" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="imageOnClick"
        android:src="@drawable/selectimage_firstvers"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.529" />

    <EditText
        android:id="@+id/uploadingFragment_picturesName_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="the picture's name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.189"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="saveOnClick"
        android:text="save"
        app:layout_constraintBaseline_toBaselineOf="@+id/uploadingFragment_noteAboutPicture_editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toEndOf="@+id/uploadingFragment_picturesDate_editText" />
</androidx.constraintlayout.widget.ConstraintLayout>

    